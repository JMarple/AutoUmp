#ifndef UTIL_H
#define UTIL_H

#include <stdint.h>

#define FUNC_ERROR -1

uint8_t inline getBitInPic(
    uint8_t* bitPicture,
    uint32_t bitIndex);

uint8_t inline getBitInByte(
    uint8_t byte,
    uint32_t bitLoc);

int8_t inline setBitInPic(
    uint8_t* bitPicture,
    uint32_t bitIndex,
    uint8_t val);

int8_t inline setBitInByte(
    uint8_t* byte,
    uint8_t bitLoc,
    uint8_t bitVal);

#endif
