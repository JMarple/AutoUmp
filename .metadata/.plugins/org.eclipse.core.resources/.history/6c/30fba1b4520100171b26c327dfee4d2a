#ifndef __ALGS_H__
#define __ALGS_H__

#define IMG_WIDTH 320
#define IMG_HEIGHT 240

void FloodFillThread(chanend stream);
void DenoiseRow(
    uint8_t* unsafe top,
    uint8_t* unsafe cur,
    uint8_t* unsafe bot);

void DenoiseByte(
    uint8_t* unsafe top,
    uint8_t* unsafe left,
    uint8_t* unsafe cur,
    uint8_t* unsafe right,
    uint8_t* unsafe bot);

void JustinDenoiseRow(
    uint32_t* unsafe top,
    uint32_t* unsafe cur,
    uint32_t* unsafe bot);

