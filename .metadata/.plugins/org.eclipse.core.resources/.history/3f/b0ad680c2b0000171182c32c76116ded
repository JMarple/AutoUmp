void FloodFillThread(chanend stream)
{ unsafe {
    while (1==1)
    {
        uint32_t starttime, endtime;
        timer t;

        t :> starttime;

        // Blocking statement that recieves a bit image
        uint8_t* unsafe bitBuffer;
        stream :> bitBuffer;

        // -----------------------
        // Tim your code goes here.
        // -----------------------

        t :> endtime;
        printf("Clock ticks (@100Mhz) = %d\n", (endtime - starttime));
    }
}}
